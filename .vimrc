set nu
" set ruler 
set tabstop=4			" Tab width
set softtabstop=4		" Indent 4-space 
set shiftwidth=4

set noexpandtab			" Don't replace Tab with Space
syntax on				" Highlight
" set cursorline			" Highlight the current line
" autocmd InsertLeave * se nocul		" Highlight the current line with light color
" autocmd InsertEnter * se cul		" Highlight the current line with dark color
set autoindent
